theorem map_neg_of_bddlathom {A B : BoolAlg} (f : A ‚ü∂ B) (a : A) : f (a·∂ú) = (f a)·∂ú := by
  have : a ‚äì a·∂ú = ‚ä• := by simp only [inf_compl_self]
  have : a ‚äî a·∂ú = ‚ä§ := by simp only [sup_compl_eq_top]

  have m : f a ‚äì f (a·∂ú) = ‚ä• := by
      calc f a ‚äì f (a·∂ú) = f (a ‚äì a·∂ú) := by rw [map_inf]
                      _ = f ‚ä•        := by simp only [inf_compl_self, map_bot]
                      _ = ‚ä•          := by simp only [map_bot]

  have j : f a ‚äî f (a·∂ú) = ‚ä§ := by
      calc f a ‚äî f (a·∂ú) = f (a ‚äî a·∂ú) := by rw [map_sup]
                      _ = f ‚ä§        := by simp only [sup_compl_eq_top, map_top]
                      _ = ‚ä§          := by simp only [map_top]

  exact neg_determined_in_bool (f a) (f a·∂ú) m j

