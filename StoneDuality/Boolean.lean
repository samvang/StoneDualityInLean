lemma non_empty_inter_ultrafilter_of_clopens {X : Profinite}
(F : Profinite.of (BoolAlg.of (Clopens X) ‚ü∂ BoolAlg.of Prop)) :
Set.Nonempty (Set.sInter (ultrafilter_of_hom_of_clopens F)) := by

  haveI : Nonempty (ultrafilter_of_hom_of_clopens F) := by
      use Set.univ
      simp only [Set.mem_image, Set.mem_preimage, BddDistLat.coe_toBddLat, BoolAlg.coe_toBddDistLat,
        BoolAlg.coe_of, SupHom.toFun_eq_coe, LatticeHom.coe_toSupHom,
        BoundedLatticeHom.coe_toLatticeHom, Set.mem_singleton_iff, eq_iff_iff, iff_true]
      use ‚ä§
      constructor
      have : F.toFun ‚ä§ := by rw [F.map_top']; trivial
      congr
      trivial

  have hSd : DirectedOn (fun (x x_1 : Set X) => x ‚äá x_1) (ultrafilter_of_hom_of_clopens F) := by
    unfold DirectedOn
    intro U hU V hV
    set W := U ‚à© V with Wdef
    use W
    refine ‚ü®?_, Set.inter_subset_left U V, Set.inter_subset_right U V‚ü©

    let ‚ü®Upr, ‚ü® hlU, hrU‚ü© ‚ü© := hU
    let ‚ü®Vpr, ‚ü® hlV, hrV‚ü© ‚ü© := hV
    set Wpr := Upr ‚äì Vpr with WprDef

    have W_coe : Clopens.Simps.coe Wpr = W := by
      rw [WprDef, Wdef]
      ext x
      rw [‚Üê hrU]
      rw [‚Üê hrV]
      exact Set.mem_def

    simp only [Set.mem_image, Set.mem_preimage, BddDistLat.coe_toBddLat, BoolAlg.coe_toBddDistLat,
      BoolAlg.coe_of, SupHom.toFun_eq_coe, LatticeHom.coe_toSupHom,
      BoundedLatticeHom.coe_toLatticeHom, Set.mem_singleton_iff, eq_iff_iff, iff_true]
    use Wpr

    constructor
    rw [WprDef]
    rw [map_inf]
    simp at hlU
    simp at hlV
    exact ‚ü®hlU, hlV‚ü©
    exact W_coe

  have hSn : ‚àÄ U ‚àà ultrafilter_of_hom_of_clopens F, Set.Nonempty U := by
    intro U hU
    obtain ‚ü®Upr, ‚ü®hl, hr‚ü©‚ü© := hU
    simp at hl
    rw [Set.nonempty_iff_ne_empty, ‚Üê hr]
    have Fbot : F.toFun ‚ä• = False := by rw [F.map_bot']; trivial
    intro hUemp
    have Upr_is_bot : Upr = ‚ä• := by
      rw [‚Üê Clopens.coe_eq_empty]
      exact hUemp
    rw [‚Üê Upr_is_bot] at Fbot
    rw [‚Üê Fbot]
    exact hl

  have hSclp : ‚àÄ U ‚àà ultrafilter_of_hom_of_clopens F, IsClopen U := by
    intro U hU
    let ‚ü®‚ü®U_shadow, r‚ü©, ‚ü® _, hr‚ü© ‚ü© := hU
    rw [‚Üê hr]
    exact r

  have hSc : ‚àÄ U ‚àà ultrafilter_of_hom_of_clopens F, IsCompact U := by
    intro U hU
    apply IsClosed.isCompact
    apply IsClopen.isClosed
    exact hSclp U hU

  have hScl : ‚àÄ U ‚àà ultrafilter_of_hom_of_clopens F, IsClosed U := by
    intro U hU
    apply IsClopen.isClosed
    exact hSclp U hU

  exact IsCompact.nonempty_sInter_of_directed_nonempty_isCompact_isClosed hSd hSn hSc hScl


theorem epsilonSurj {X : Profinite} : Function.Surjective (@epsilonCont X).toFun := by
    intro F
    set Fclp : Set (Clopens X) := (F.toFun)‚Åª¬π' {True} with Fclpeq
    set FclpS : Set (Set X) := Clopens.Simps.coe '' Fclp with FclpSeq
    set K : Set X := Set.sInter FclpS with Keq
    have : K = Set.sInter (ultrafilter_of_hom_of_clopens F) := by rfl

    have Kne : K.Nonempty := by
      rw [this]
      exact non_empty_inter_ultrafilter_of_clopens F

    obtain ‚ü®x, hx‚ü© := Kne
    use x
    simp only [epsilonCont, epsilonObjObj]
    dsimp only [Profinite.coe_of, CompHaus.coe_of]
    apply coercionhell
    simp only [BddDistLat.coe_toBddLat, BoolAlg.coe_toBddDistLat, BoolAlg.coe_of]
    ext L

    have inF_implies_xin (U : Clopens X) (h : F.toFun U) : x ‚àà U := by
      have : K ‚äÜ U := by
        rw[Keq, FclpSeq]
        apply Set.sInter_subset_of_mem
        simp only [BddDistLat.coe_toBddLat, BoolAlg.coe_toBddDistLat, BoolAlg.coe_of,
          Set.preimage_singleton_true, Set.mem_image, Set.mem_setOf_eq]
